{
  "$schema": "https://railway.json.schema",
  "services": {
    "backend": {
      "dockerfile": "./backend-rust/Dockerfile",
      "buildCommand": "",
      "startCommand": "/app/server",
      "variables": {
        "SERVER_HOST": "0.0.0.0",
        "SERVER_PORT": "$PORT",
        "ADMIN_CODE": "122601",
        "RUST_LOG": "info",
        "DATABASE_URL": "postgresql://${{ services.postgres.variables.POSTGRES_USER }}:${{ services.postgres.variables.POSTGRES_PASSWORD }}@${{ services.postgres.variables.PGHOST }}:${{ services.postgres.variables.PGPORT }}/${{ services.postgres.variables.POSTGRES_DB }}"
      }
    },
    "frontend": {
      "buildCommand": "npm install && npm run build",
      "startCommand": "npm run preview",
      "variables": {
        "VITE_API_URL": "${{ services.backend.public.url }}"
      }
    },
    "postgres": {
      "image": "postgres:15-alpine",
      "variables": {
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "${{ secrets.DB_PASSWORD }}",
        "POSTGRES_DB": "railway"
      }
    }
  }
}
